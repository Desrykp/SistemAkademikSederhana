<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    app:cardCornerRadius="2dp"
    app:cardElevation="3dp"
    app:cardUseCompatPadding="true"
    android:background="@color/white">

    <LinearLayout
        android:id="@+id/linearLayout"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:padding="8dp">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/namaKelas"
            android:text="NAMA KELAS"
            android:textStyle="bold"
            android:textColor="@color/black"
            android:textSize="22sp"
            android:padding="16dp"/>

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:id="@+id/explainable_Layout"
            android:visibility="visible">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/namMentor"
                android:text="NAMA Mentor"
                android:textStyle="bold"
                android:textColor="#504C4C"
                android:textSize="18sp"
                android:padding="16dp"/>

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/jadwalKelas"
                android:text="Jadwal Kelas"
                android:textColor="#504C4C"
                android:textSize="18sp"
                android:padding="16dp"
                android:layout_alignParentRight="true"
                android:layout_alignParentEnd="true"/>

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/deskripsiKelas"
                android:text="DeskripsiKelas"
                android:textColor="#504C4C"
                android:textSize="18sp"
                android:padding="16dp"
                android:layout_below="@id/jadwalKelas"/>

        </RelativeLayout>

    </LinearLayout>

</androidx.cardview.widget.CardView>