<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:layout_margin="4dp"
    android:padding="4dp"
    android:background="@color/bacground"
    tools:context=".SimpanAbsen">

    <RelativeLayout
        android:id="@+id/rl_akunabsen"
        android:layout_width="match_parent"
        android:layout_height="100dp"
        android:padding="3dp"
        android:layout_marginTop="10dp"
        android:layout_margin="3dp"
        android:background="@drawable/card_backgroun2">

        <androidx.cardview.widget.CardView
            android:id="@+id/cdv_picture"
            android:layout_width="70dp"
            android:layout_height="70dp"
            android:layout_marginTop="12dp"
            android:layout_marginStart="5dp"
            app:cardCornerRadius="65dp">

            <ImageView
                android:id="@+id/img_picture"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:scaleType="centerCrop"
                android:src="@drawable/users"/>

        </androidx.cardview.widget.CardView>

        <TextView
            android:id="@+id/tv_namaAkun"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Nama Akun"
            android:textColor="@color/black"
            android:textSize="20sp"
            android:textStyle="bold"
            android:layout_marginTop="10dp"
            android:layout_marginStart="90dp"
            tools:ignore="HardcodedText,RelativeOverlap" />

        <TextView
            android:id="@+id/tv_emailAkun"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="email Pengguna"
            android:textColor="#2196F3"
            android:textSize="12sp"
            android:textStyle="bold"
            android:layout_below="@id/tv_namaAkun"
            android:layout_marginStart="90dp"/>

        <TextView
            android:id="@+id/tv_namaKelas"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Nama Kelas"
            android:textColor="#393939"
            android:textSize="17sp"
            android:textStyle="bold"
            android:layout_marginTop="8dp"
            android:layout_below="@id/tv_emailAkun"
            android:layout_marginStart="90dp"/>

        <TextView
            android:id="@+id/tv_Jadwalkelas"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Jadwal Kelas"
            android:textColor="#393939"
            android:textSize="12sp"
            android:textStyle="bold"
            android:layout_marginTop="8dp"
            android:layout_marginRight="10dp"
            android:layout_marginBottom="13dp"
            android:layout_alignParentRight="true"
            android:layout_alignParentBottom="true"/>

    </RelativeLayout>

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:padding="4dp"
        android:layout_marginTop="10dp"
        android:layout_margin="4dp"
        android:background="@drawable/card_backgroun2">

        <LinearLayout
            android:layout_width="190dp"
            android:layout_height="match_parent"
            android:orientation="horizontal"
            android:background="@drawable/card_backgroun2">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Waktu Absen"
                android:textSize="17sp"
                android:layout_marginStart="10dp"
                android:layout_marginTop="10dp"/>

        </LinearLayout>

        <LinearLayout
            android:layout_width="190dp"
            android:layout_height="match_parent"
            android:orientation="vertical"
            android:layout_alignParentRight="true"
            android:background="@drawable/card_backgroun2">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Keterangan"
                android:textSize="17sp"
                android:layout_marginStart="10dp"
                android:layout_marginTop="10dp"/>

        </LinearLayout>

    </RelativeLayout>

</LinearLayout>