                android:layout_height="70dp"
                android:background="@drawable/card_backgroun4">

                <TextView
                    android:id="@+id/tv_ruangA"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="RUANG"
                    android:textColor="#555151"
                    android:textStyle="bold"
                    android:textSize="20sp"
                    android:layout_marginStart="8dp"
                    android:layout_marginTop="5dp"
                    tools:ignore="RelativeOverlap" />

                <TextView
                    android:id="@+id/tv_kelasA"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="KELAS"
                    android:textColor="#FF4E16"
                    android:textStyle="bold"
                    android:textSize="20sp"
                    android:layout_marginStart="75dp"
                    android:layout_marginTop="5dp"
                    tools:ignore="RelativeOverlap" />

                <SearchView
                    android:id="@+id/searchViewA"
                    android:layout_width="match_parent"
                    android:layout_height="30dp"
                    android:gravity="center"
                    android:iconifiedByDefault="false"
                    android:queryHint="Search in Here"
                    android:layout_marginTop="5dp"
                    android:layout_marginLeft="5dp"
                    android:layout_marginRight="5dp"
                    android:layout_below="@id/tv_kelasA"
                    android:background="@drawable/card_backgroun2">

                </SearchView>

            </RelativeLayout>

