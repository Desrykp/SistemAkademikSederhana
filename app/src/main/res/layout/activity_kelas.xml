                    android:layout_height="95dp"
                    app:cardCornerRadius="8dp"
                    app:cardElevation="5dp"
                    app:cardPreventCornerOverlap="true"
                    app:cardBackgroundColor="#B5BEF1"
                    app:cardUseCompatPadding="true"
                    android:layout_marginTop="0dp">

                    <TextView
