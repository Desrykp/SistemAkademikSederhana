                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="8dp"
                        android:layout_marginStart="80dp"
                        android:hint="Web Developer"
                        android:textSize="22sp"
                        android:textStyle="bold"
                        android:textColor="@color/black"/>

                    <TextView
                        android:id="@+id/tv_namaMentorweb"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="35dp"
                        android:layout_marginStart="80dp"
                        android:hint="No Name "
                        android:textSize="17sp"
                        android:textColor="@color/white"/>

                    <androidx.cardview.widget.CardView
                        android:id="@+id/cdv_kelaswebA"
                        android:layout_width="60dp"
                        android:layout_height="60dp"
                        app:cardCornerRadius="55dp"
                        android:layout_marginLeft="8dp"
                        android:layout_marginTop="7dp">

                        <ImageView
                            android:id="@+id/img_webDevelop"
                            android:layout_width="match_parent"
                            android:layout_height="match_parent"
                            android:scaleType="centerCrop"
                            android:src="@drawable/webdevelop"
                            android:contentDescription="img_webdeveloper"/>

                    </androidx.cardview.widget.CardView>

                </androidx.cardview.widget.CardView>

            </RelativeLayout>

