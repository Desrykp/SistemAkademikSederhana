<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:gravity="center"
    android:padding="4dp"
    android:layout_margin="3dp"
    android:orientation="vertical"
    tools:context=".admin.BuatKelas">

    <EditText
        android:id="@+id/edittxtNamaKelas"
        android:layout_width="300dp"
        android:layout_height="40dp"
        android:hint="Nama Kelas"
        android:textColor="@color/black"
        android:textSize="12sp"/>

    <EditText
        android:id="@+id/edittxtNamaMentor"
        android:layout_width="300dp"
        android:layout_height="40dp"
        android:hint="Nama Mentor"
        android:textColor="@color/black"
        android:textSize="12sp"
        android:layout_marginTop="10dp"/>

    <EditText
        android:id="@+id/edittxtJadwalKelas"
        android:layout_width="300dp"
        android:layout_height="40dp"
        android:hint="Hari dan Tanggal"
        android:textColor="@color/black"
        android:textSize="12sp"
        android:layout_marginTop="10dp"/>
    
    <Button
        android:id="@+id/smpnKelas"
        android:layout_width="100dp"
        android:layout_height="40dp"
        android:text="SIMPAN"
        android:textSize="15sp"
        android:textStyle="bold"
        android:textColor="@color/white"
        android:background="@drawable/button_keluar"/>

</LinearLayout>