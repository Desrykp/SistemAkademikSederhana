<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/bacground"
    android:orientation="vertical"
    android:padding="5dp"
    tools:context=".guru.GuruActivity">

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical">

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="40dp">

                <TextView
                    android:id="@+id/tv_KPinDCm"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="KPinDC"
                    android:textSize="25sp"
                    android:textStyle="bold"
                    android:textColor="#4E8AE6"
                    android:layout_marginStart="5dp"/>
                <TextView
                    android:id="@+id/user_txt_name"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_centerInParent="true"
                    tools:text="User sebagai administrator"/>

                <androidx.cardview.widget.CardView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    app:cardCornerRadius="8dp"
                    app:cardElevation="5dp"
                    android:layout_marginStart="240dp">

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="33dp"
                        android:layout_gravity="center_vertical"
                        android:orientation="horizontal"
                        android:padding="5dp"
                        tools:ignore="UseCompoundDrawables">

                        <ImageView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginStart="5dp"
                            android:layout_marginTop="1dp"
                            android:src="@drawable/ic_kupon"/>

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginStart="5dp"
                            android:hint="kupon"
                            android:textSize="17sp" />

                    </LinearLayout>

                </androidx.cardview.widget.CardView>

                <ImageView
                    android:id="@+id/emailm"
                    android:layout_width="65dp"
                    android:layout_height="65dp"
                    android:layout_marginStart="250dp"
                    android:layout_toEndOf="@id/tv_KPinDCm"
                    android:src="@drawable/ic_email" />

            </RelativeLayout>

            <RelativeLayout
                android:id="@+id/rl_akunm"
                android:layout_width="match_parent"
                android:layout_height="100dp"
                android:padding="3dp"
                android:layout_marginTop="7dp"
                android:layout_margin="3dp"
                android:background="@drawable/card_backgroun2">

                <androidx.cardview.widget.CardView
                    android:id="@+id/cdv_picturem"
                    android:layout_width="70dp"
                    android:layout_height="70dp"
                    android:layout_marginStart="5dp"
                    app:cardCornerRadius="65dp">

                    <ImageView
                        android:id="@+id/img_picturem"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:scaleType="centerCrop"
                        android:src="@drawable/users"/>

                </androidx.cardview.widget.CardView>

                <TextView
                    android:id="@+id/tv_namaAkunm"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Nama Akun"
                    android:textColor="@color/black"
                    android:textSize="17sp"
                    android:textStyle="bold"
                    android:layout_marginTop="10dp"
                    android:layout_marginStart="90dp"
                    tools:ignore="HardcodedText,RelativeOverlap" />

                <TextView
                    android:id="@+id/tv_emailAkunm"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="email Pengguna"
                    android:textColor="#2196F3"
                    android:textSize="12sp"
                    android:textStyle="bold"
                    android:layout_below="@id/tv_namaAkunm"
                    android:layout_marginStart="90dp"/>

                <ImageView
                    android:id="@+id/iamge_poinm"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:src="@drawable/ic_poin"
                    android:layout_marginStart="90dp"
                    android:layout_marginTop="53dp"/>

                <TextView
                    android:id="@+id/tv_Poinm"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="0 Point"
                    android:textColor="#FF9800"
                    android:textSize="12sp"
                    android:textStyle="bold"
                    android:layout_marginStart="115dp"
                    android:layout_marginTop="57dp"
                    tools:ignore="RelativeOverlap" />

                <ImageView
                    android:id="@+id/iamge_favoritem"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:src="@drawable/ic_favorit"
                    android:layout_marginStart="165dp"
                    android:layout_marginTop="53dp"/>

                <TextView
                    android:id="@+id/tv_Fvoritm"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="0 Suka"
                    android:textColor="#FF0000"
                    android:textSize="12sp"
                    android:textStyle="bold"
                    android:layout_marginStart="190dp"
                    android:layout_marginTop="57dp"
                    tools:ignore="RelativeOverlap" />

                <TextView
                    android:id="@+id/tv_lihatDetailm"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Lihat detail"
                    android:textColor="#5EA6DF"
                    android:textSize="12sp"
                    android:textStyle="bold"
                    android:layout_marginTop="8dp"
                    android:layout_marginEnd="10dp"
                    android:layout_alignParentEnd="true"
                    tools:ignore="RelativeOverlap" />

                <Button
                    android:layout_width="350dp"
                    android:layout_height="15dp"
                    android:text="Level Akun"
                    android:textAlignment="center"
                    android:textSize="7sp"
                    android:background="@drawable/button_level"
                    android:layout_centerHorizontal="true"
                    android:layout_alignParentBottom="true"
                    tools:ignore="SmallSp" />

            </RelativeLayout>

            <LinearLayout
                android:id="@+id/ly_ruangKelasm"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:orientation="vertical"
                android:layout_marginTop="3dp"
                android:layout_margin="3dp"
                android:background="@drawable/card_backgroun2">

                <RelativeLayout
                    android:id="@+id/rl_ruangBelajarm"
                    android:layout_width="match_parent"
                    android:layout_height="70dp"
                    android:background="@drawable/card_backgroun4">

                    <TextView
                        android:id="@+id/tv_ruangm"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="RUANG"
                        android:textColor="#555151"
                        android:textStyle="bold"
                        android:textSize="20sp"
                        android:layout_marginStart="8dp"
                        android:layout_marginTop="5dp"
                        tools:ignore="RelativeOverlap" />

                    <TextView
                        android:id="@+id/tv_belajarm"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="KELAS"
                        android:textColor="#FF4E16"
                        android:textStyle="bold"
                        android:textSize="20sp"
                        android:layout_marginStart="75dp"
                        android:layout_marginTop="5dp"
                        tools:ignore="RelativeOverlap" />

                    <SearchView
                        android:id="@+id/searchViewMentor"
                        android:layout_width="match_parent"
                        android:layout_height="30dp"
                        android:gravity="center"
                        android:iconifiedByDefault="false"
                        android:queryHint="Search in Here"
                        android:layout_marginTop="5dp"
                        android:layout_marginLeft="5dp"
                        android:layout_marginRight="5dp"
                        android:layout_below="@id/tv_belajarm"
                        android:background="@drawable/card_backgroun2">

                    </SearchView>

                </RelativeLayout>

                <LinearLayout
                    android:id="@+id/rl_arsipMentor"
                    android:layout_width="match_parent"
                    android:layout_height="90dp"
                    android:orientation="horizontal"
                    android:gravity="center">

                    <androidx.cardview.widget.CardView
                        android:id="@+id/arsipDownloadMentor"
                        android:layout_width="190dp"
                        android:layout_height="95dp"
                        app:cardCornerRadius="8dp"
                        app:cardElevation="5dp"
                        app:cardPreventCornerOverlap="true"
                        app:cardBackgroundColor="#FFFFFF"
                        app:cardUseCompatPadding="true"
                        android:layout_marginTop="0dp">

                        <TextView
                            android:id="@+id/tv_Downloadm"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginTop="8dp"
                            android:layout_marginStart="55dp"
                            android:hint="Download"
                            android:textSize="17sp"
                            android:textStyle="bold"
                            android:textColor="@color/white"/>

                        <TextView
                            android:id="@+id/tv_bukaHasilDownloadm"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginTop="30dp"
                            android:layout_marginStart="55dp"
                            android:hint="Buka hasil downloadanmu"
                            android:textSize="12sp"
                            android:textColor="@color/white"/>

                        <ImageView
                            android:id="@+id/img_arsipm"
                            android:layout_width="40dp"
                            android:layout_height="40dp"
                            android:layout_marginStart="10dp"
                            android:layout_marginTop="8dp"
                            android:src="@drawable/ic_arsip"/>

                        <ImageView
                            android:id="@+id/img_rightm"
                            android:layout_width="30dp"
                            android:layout_height="40dp"
                            android:layout_marginTop="8dp"
                            android:src="@drawable/ic_right"
                            android:layout_marginStart="325dp"/>

                    </androidx.cardview.widget.CardView>

                    <androidx.cardview.widget.CardView
                        android:id="@+id/cdvjadwalMentor"
                        android:layout_width="190dp"
                        android:layout_height="95dp"
                        app:cardCornerRadius="8dp"
                        app:cardElevation="5dp"
                        app:cardPreventCornerOverlap="true"
                        app:cardBackgroundColor="#FFFFFF"
                        app:cardUseCompatPadding="true"
                        android:layout_marginTop="0dp">

                        <TextView
                            android:id="@+id/tv_jadwalBelajarm"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginTop="8dp"
                            android:layout_marginStart="55dp"
                            android:hint="Jadwal Belajar"
                            android:textSize="17sp"
                            android:textStyle="bold"
                            android:textColor="@color/white"/>

                        <TextView
                            android:id="@+id/tv_jadwalm"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginTop="30dp"
                            android:layout_marginStart="55dp"
                            android:hint="Rencanakan jadwal belajarmu disini"
                            android:textSize="12sp"
                            android:textColor="@color/white"/>

                        <ImageView
                            android:id="@+id/img_jadwalm"
                            android:layout_width="35dp"
                            android:layout_height="35dp"
                            android:layout_marginStart="10dp"
                            android:layout_marginTop="8dp"
                            android:src="@drawable/ic_jadwal"/>

                        <ImageView
                            android:id="@+id/img_rightsm"
                            android:layout_width="30dp"
                            android:layout_height="40dp"
                            android:layout_marginStart="325dp"
                            android:layout_marginTop="8dp"
                            android:src="@drawable/ic_right"
                            tools:ignore="TooManyViews" />

                    </androidx.cardview.widget.CardView>

                </LinearLayout>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:orientation="vertical">

                    <RelativeLayout
                        android:id="@+id/kelasAmentor"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content">

                        <androidx.cardview.widget.CardView
                            android:id="@+id/cdvwebMentor"
                            android:layout_width="match_parent"
                            android:layout_height="95dp"
                            app:cardCornerRadius="8dp"
                            app:cardElevation="5dp"
                            app:cardPreventCornerOverlap="true"
                            app:cardBackgroundColor="#B5BEF1"
                            app:cardUseCompatPadding="true"
                            android:layout_marginTop="0dp">

                            <TextView
                                android:id="@+id/tv_kelasMentorweb"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_marginTop="8dp"
                                android:layout_marginStart="80dp"
                                android:hint="Web Developer"
                                android:textSize="22sp"
                                android:textStyle="bold"
                                android:textColor="@color/black"/>

                            <TextView
                                android:id="@+id/tv_namaMweb"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_marginTop="35dp"
                                android:layout_marginStart="80dp"
                                android:hint="Nama Mentor "
                                android:textSize="17sp"
                                android:textColor="@color/white"/>

                            <androidx.cardview.widget.CardView
                                android:id="@+id/cdv_kelaswebMentor"
                                android:layout_width="60dp"
                                android:layout_height="60dp"
                                app:cardCornerRadius="55dp"
                                android:layout_marginLeft="8dp"
                                android:layout_marginTop="7dp">

                                <ImageView
                                    android:id="@+id/img_webDevelopM"
                                    android:layout_width="match_parent"
                                    android:layout_height="match_parent"
                                    android:scaleType="centerCrop"
                                    android:src="@drawable/webdevelop"
                                    android:contentDescription="img_webdeveloper"/>

                            </androidx.cardview.widget.CardView>

                        </androidx.cardview.widget.CardView>

                    </RelativeLayout>

                    <RelativeLayout
                        android:id="@+id/kelasBmentor"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content">

                        <androidx.cardview.widget.CardView
                            android:id="@+id/cdvAndroMentor"
                            android:layout_width="match_parent"
                            android:layout_height="95dp"
                            app:cardCornerRadius="8dp"
                            app:cardElevation="5dp"
                            app:cardPreventCornerOverlap="true"
                            app:cardBackgroundColor="#B5BEF1"
                            app:cardUseCompatPadding="true"
                            android:layout_marginTop="0dp">

                            <TextView
                                android:id="@+id/tv_kelasAndrom"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_marginTop="8dp"
                                android:layout_marginStart="80dp"
                                android:hint="Android Developer"
                                android:textSize="22sp"
                                android:textStyle="bold"
                                android:textColor="@color/black"/>

                            <TextView
                                android:id="@+id/tv_namaMsndro"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_marginTop="35dp"
                                android:layout_marginStart="80dp"
                                android:hint="Nama Mentor"
                                android:textSize="17sp"
                                android:textColor="@color/white"/>

                            <androidx.cardview.widget.CardView
                                android:id="@+id/cdv_kelasAndroM"
                                android:layout_width="60dp"
                                android:layout_height="60dp"
                                app:cardCornerRadius="55dp"
                                android:layout_marginLeft="8dp"
                                android:layout_marginTop="7dp">

                                <ImageView
                                    android:id="@+id/img_androDevelopM"
                                    android:layout_width="match_parent"
                                    android:layout_height="match_parent"
                                    android:scaleType="centerCrop"
                                    android:src="@drawable/andev"/>

                            </androidx.cardview.widget.CardView>

                        </androidx.cardview.widget.CardView>

                    </RelativeLayout>

                    <RelativeLayout
                        android:id="@+id/kelasCMentor"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content">

                        <androidx.cardview.widget.CardView
                            android:id="@+id/cdvUiuxMentor"
                            android:layout_width="match_parent"
                            android:layout_height="95dp"
                            app:cardCornerRadius="8dp"
                            app:cardElevation="5dp"
                            app:cardPreventCornerOverlap="true"
                            app:cardBackgroundColor="#B5BEF1"
                            app:cardUseCompatPadding="true"
                            android:layout_marginTop="0dp">

                            <TextView
                                android:id="@+id/tv_kelasUiuxm"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_marginTop="8dp"
                                android:layout_marginStart="80dp"
                                android:hint="UI / UX"
                                android:textSize="22sp"
                                android:textStyle="bold"
                                android:textColor="@color/black"/>

                            <TextView
                                android:id="@+id/tv_namaMuiux"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_marginTop="35dp"
                                android:layout_marginStart="80dp"
                                android:hint="Nama Mentor"
                                android:textSize="17sp"
                                android:textColor="@color/white"/>

                            <androidx.cardview.widget.CardView
                                android:id="@+id/cdv_kelasUiuxm"
                                android:layout_width="60dp"
                                android:layout_height="60dp"
                                app:cardCornerRadius="55dp"
                                android:layout_marginLeft="8dp"
                                android:layout_marginTop="7dp">

                                <ImageView
                                    android:id="@+id/img_androUiuxm"
                                    android:layout_width="match_parent"
                                    android:layout_height="match_parent"
                                    android:scaleType="centerCrop"
                                    android:src="@drawable/uiux"/>

                            </androidx.cardview.widget.CardView>

                        </androidx.cardview.widget.CardView>

                    </RelativeLayout>

                    <RelativeLayout
                        android:id="@+id/kelasDMentor"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content">

                        <androidx.cardview.widget.CardView
                            android:id="@+id/cdvCcMentor"
                            android:layout_width="match_parent"
                            android:layout_height="95dp"
                            app:cardCornerRadius="8dp"
                            app:cardElevation="5dp"
                            app:cardPreventCornerOverlap="true"
                            app:cardBackgroundColor="#B5BEF1"
                            app:cardUseCompatPadding="true"
                            android:layout_marginTop="0dp">

                            <TextView
                                android:id="@+id/tv_kelasCCm"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_marginTop="8dp"
                                android:layout_marginStart="80dp"
                                android:hint="Content Creator"
                                android:textSize="22sp"
                                android:textStyle="bold"
                                android:textColor="@color/black"/>

                            <TextView
                                android:id="@+id/tv_namaMcc"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_marginTop="35dp"
                                android:layout_marginStart="80dp"
                                android:hint="Nama Mentor"
                                android:textSize="17sp"
                                android:textColor="@color/white"/>

                            <androidx.cardview.widget.CardView
                                android:id="@+id/cdv_kelasCcm"
                                android:layout_width="60dp"
                                android:layout_height="60dp"
                                app:cardCornerRadius="55dp"
                                android:layout_marginLeft="8dp"
                                android:layout_marginTop="7dp">

                                <ImageView
                                    android:id="@+id/img_androCcm"
                                    android:layout_width="match_parent"
                                    android:layout_height="match_parent"
                                    android:scaleType="centerCrop"
                                    android:src="@drawable/contenreator"/>

                            </androidx.cardview.widget.CardView>

                        </androidx.cardview.widget.CardView>

                    </RelativeLayout>

                </LinearLayout>

            </LinearLayout>

            <RelativeLayout
                android:padding="10dp"
                android:orientation="horizontal"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginLeft="5dp"
                android:layout_marginRight="5dp">

                <TextView
                    android:id="@+id/LayananFavorit"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Layanan Favorit Lainnya"
                    android:textStyle="bold"
                    android:textColor="#292828"
                    android:textSize="20sp"/>

            </RelativeLayout>

            <LinearLayout
                android:id="@+id/ly_favoritSatum"
                android:layout_width="match_parent"
                android:layout_height="wrap_content">

                <androidx.cardview.widget.CardView
                    android:id="@+id/cdv_classm"
                    android:layout_width="180dp"
                    android:layout_height="90dp"
                    android:layout_marginStart="5dp"
                    app:cardCornerRadius="10dp"
                    app:cardElevation="2dp"
                    android:background="@color/white">

                    <ImageView
                        android:id="@+id/image_classm"
                        android:layout_width="60dp"
                        android:layout_height="80dp"
                        android:layout_marginStart="3dp"
                        android:src="@drawable/ic_class"/>

                    <TextView
                        android:id="@+id/tv_classm"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text="Ruang Kelas"
                        android:textStyle="bold"
                        android:textColor="#555454"
                        android:textSize="19sp"
                        android:layout_marginStart="60dp"
                        android:layout_marginTop="10dp"/>

                    <TextView
                        android:id="@+id/isi_subtexclassm"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:padding="1dp"
                        android:text="Evolusi Belajar Agar Makin Seru"
                        android:textColor="#555454"
                        android:textSize="10sp"
                        android:layout_marginStart="60dp"
                        android:layout_marginTop="40dp"
                        tools:ignore="SmallSp" />

                </androidx.cardview.widget.CardView>

                <androidx.cardview.widget.CardView
                    android:id="@+id/cdv_vidiom"
                    android:layout_width="180dp"
                    android:layout_height="90dp"
                    android:layout_marginStart="10dp"
                    android:layout_marginEnd="5dp"
                    app:cardCornerRadius="10dp"
                    app:cardElevation="2dp"
                    android:background="@color/white">

                    <ImageView
                        android:id="@+id/image_vidiom"
                        android:layout_width="45dp"
                        android:layout_height="80dp"
                        android:layout_marginStart="5dp"
                        android:src="@drawable/ic_video2"/>

                    <TextView
                        android:id="@+id/tv_vidiom"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text="Ruang Video"
                        android:textStyle="bold"
                        android:textColor="#555454"
                        android:textSize="19sp"
                        android:layout_marginStart="60dp"
                        android:layout_marginTop="10dp"/>

                    <TextView
                        android:id="@+id/tv_subvidiom"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:padding="1dp"
                        android:text="Ayo belajar dari video supaya lebih semangat"
                        android:textColor="#555454"
                        android:textSize="10sp"
                        android:layout_marginStart="60dp"
                        android:layout_marginTop="40dp"
                        tools:ignore="SmallSp" />

                </androidx.cardview.widget.CardView>

            </LinearLayout>

            <LinearLayout
                android:id="@+id/lyfavoritDuam"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="10dp">

                <androidx.cardview.widget.CardView
                    android:id="@+id/cdv_bacam"
                    android:layout_width="180dp"
                    android:layout_height="90dp"
                    android:layout_marginStart="5dp"
                    app:cardCornerRadius="10dp"
                    app:cardElevation="2dp"
                    android:background="@color/white">

                    <ImageView
                        android:id="@+id/image_bacam"
                        android:layout_width="50dp"
                        android:layout_height="80dp"
                        android:layout_marginStart="5dp"
                        android:src="@drawable/ic_read"/>

                    <TextView
                        android:id="@+id/tv_bacam"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text="Ruang Baca"
                        android:textStyle="bold"
                        android:textColor="#555454"
                        android:textSize="19sp"
                        android:layout_marginStart="60dp"
                        android:layout_marginTop="10dp"
                        tools:ignore="HardcodedText" />

                    <TextView
                        android:id="@+id/tv_subBacam"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:padding="1dp"
                        android:text="Temukan Tips Belajar Disini"
                        android:textColor="#555454"
                        android:textSize="10sp"
                        android:layout_marginStart="60dp"
                        android:layout_marginTop="40dp"
